{
  "pipeline": {
    "name": "train"
  },
  "transform": {
    "image": "tensor_flow_rnn",
    "cmd": [ "sh" ],
    "stdin": [
      "cd /code && python ptb_word_lm.py --data_path=/data/data --model=large --model_path_prefix=/data > /pfs/out/model-results",
      "cp /data/ptb.ckpt* /pfs/out",
      "cp /data/*.json /pfs/out"
    ]
  },
  "parallelism": "1",
  "inputs": [
    {
      "repo": {
        "name": "tensor_ptb_data"
      },
      "method": "global"
    }
  ]
}
{
  "pipeline": {
    "name": "generate"
  },
  "transform": {
    "image": "tensor_flow_rnn",
    "cmd": [ "sh" ],
    "stdin": [
      "cp /pfs/train/ptb.ckpt* /data",
      "cp /pfs/train/*.json /data",
      "cd /code && python ptb_word_lm.py --model=large --generate=true --model_path_prefix=/data > /pfs/out/sentence" 
    ]
  },
  "parallelism": "1",
  "inputs": [
    {
      "repo": {
        "name": "train"
      },
      "method": "global"
    }
  ]
}
