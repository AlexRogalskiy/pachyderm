{
  "pipeline": {
    "name": "filter"
  },
  "transform": {
    "image": "fruit_stand",
    "cmd": [ "sh" ],
    "stdin": [
        "for fruit in apple orange banana; do",
        "   grep $fruit /pfs/data/sales | awk '{print $2}' >>/pfs/out/$fruit",
        "done"
    ]
  },
  "parallelism": "1",
  "inputs": [
    {
      "repo": {
        "name": "data"
      },
      "method": "map"
    }
  ]
}
{
  "pipeline": {
    "name": "sum"
  },
  "transform": {
    "image": "fruit_stand",
    "cmd": [ "sh" ],
    "stdin": [
        "for fruit in apple orange banana; do",
        "   { cat /pfs/prev/$fruit || echo 0; cat /pfs/filter/$fruit; } | awk '{s+=$1} END {print s}' > /pfs/out/$fruit",
        "done"
    ]
  },
  "parallelism": "1",
  "inputs": [
    {
      "repo": {
        "name": "filter"
      },
      "method": {
        "partition": "file",
        "incremental": true
      }
    }
  ]
}
