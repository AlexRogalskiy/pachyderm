#!/bin/sh

set -Ee

DIR="$(cd "$(dirname "${0}")" && pwd)"
cd "${DIR}"

. "${DIR}/../etc/env/env.env"

"${DIR}/update-deps-list"

REPO_DIR="$(cd "${DIR}/.." && pwd)"
docker build -t "pachyderm/${PACHYDERM_DEFAULT_IMAGE}" "${REPO_DIR}"

if [ -n "${PACHYDERM_IMAGE}" ]; then
  docker run -v "${REPO_DIR}/_tmp:/compile" "pachyderm/${PACHYDERM_DEFAULT_IMAGE}" /go/src/github.com/pachyderm/pachyderm/bin/compile "src/cmd/${PACHYDERM_IMAGE}/main.go" "${PACHYDERM_IMAGE}" "/compile"
  docker build -t "pachyderm/${PACHYDERM_IMAGE}" -f "${REPO_DIR}/Dockerfile.${PACHYDERM_IMAGE}" "${REPO_DIR}"
fi
