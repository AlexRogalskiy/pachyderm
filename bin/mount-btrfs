#!/bin/sh

set -Ee

DIR="$(cd "$(dirname "${0}")" && pwd)"
cd "${DIR}"

. "${DIR}/../etc/env/pfs.env"

"${DIR}/unmount-btrfs"

sudo mkdir -p "${PFS_HOST_VOLUME}"
sudo truncate "${PFS_DATA_IMG}" -s 10G
sudo mkfs.btrfs "${PFS_DATA_IMG}"
echo mount "${PFS_DATA_IMG}" "${PFS_HOST_VOLUME}" >&2
sudo mount "${PFS_DATA_IMG}" "${PFS_HOST_VOLUME}"
