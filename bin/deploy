#!/bin/sh

set -Ee

DIR="$(cd "$(dirname "${0}")" && pwd)"
cd "${DIR}"

. "${DIR}/../etc/env/env.env"

mkdir -p /home/core/pfs
docker pull pachyderm/deploy
docker run \
    --privileged=true \
    -v /:/host:ro \
    -v /home/core:/host/home/core \
    -v /var/run/fleet.sock:/host/var/run/fleet.sock \
    pachyderm/deploy \
    $@
fleetctl start /home/core/pfs/*.service
