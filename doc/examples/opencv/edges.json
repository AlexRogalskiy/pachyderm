{
    "pipeline": {
        "name": "edges"
    },
    "input": {
        "atom": {
            "glob": "/*",
            "repo": "images"
        }
    },
    "transform": {
        "cmd": [
            "python3",
            "/edges.py"
        ],
        "image": "pachyderm/opencv"
    }
}{
    "pipeline": {
        "name": "montage"
    },
    "input": {
        "cross": [
            {
                "atom": {
                    "glob": "/",
                    "repo": "images"
                }
            },
            {
                "atom": {
                    "glob": "/",
                    "repo": "edges"
                }
            }
        ]
    },
    "transform": {
        "cmd": [
            "sh"
        ],
        "image": "v4tech/imagemagick",
        "stdin": [
            "montage -shadow -background SkyBlue -geometry 300x300+2+2 $(find /pfs -type f | sort) /pfs/out/montage.png"
        ]
    }
}
