{
  "pipeline": {
    "name": "split"
  },
  "transform": {
    "cmd": [ "/bin/bash" ],
    "stdin": [
      "shuf /pfs/raw-data/iris.csv > /tmp/iris_shuffled.csv",
      "head -n120 /tmp/iris_shuffled.csv > /pfs/out/train.csv",
      "tail -n30 /tmp/iris_shuffled.csv > /pfs/out/test.csv"
    ]
  },
  "parallelism_spec": {
    "constant": "1"
  },
  "input": {
    "atom": {
      "repo": "raw-data",
      "glob": "/"
    }
  }
}
