#!/bin/bash
version=`cat VERSION`

if [ -z $version ]
then
        echo "No version found for this commit! Aborting release"
        exit 1
fi

echo "--- Releasing manifest w version: $version"
pach-deploy -s 32 --version `cat VERSION` > etc/kube/pachyderm-versioned.json
pach-deploy -s 32 > etc/kube/pachyderm.json
git commit -a -m "Updated manifest to version `cat VERSION`"
