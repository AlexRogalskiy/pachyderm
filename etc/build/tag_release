#!/usr/bin/env bash

if [ -z $VERSION ]
then
        echo "No version found for this commit! Aborting release"
        exit 1
fi

echo "--- Tagging release w version: $VERSION"
echo "Tagging this build as: v$VERSION"
git tag "v$VERSION"
echo "--- Pushing tags ..."
git push --quiet --tags > /dev/null 2>&1
